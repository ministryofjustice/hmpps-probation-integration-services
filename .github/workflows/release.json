{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature"]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": ["fix"]
    },
    {
      "title": "## 🧪 Tests",
      "labels": ["test"]
    },
    {
      "title": "## Linked card",
      "labels": ["PI-*"]
    }
  ],

  "template": "${{CHANGELOG}}\n\n<details>\n<summary>Uncategorized</summary>\n\n${{UNCATEGORIZED}}\n</details>",
  "pr_template": "- ${{TITLE}}\n   - PR: #${{NUMBER}}",
  "empty_template": "- no changes",
  "label_extractor": [
    {
      "pattern": "✨",
      "on_property": "title",
      "target": "feature"
    },
    {
      "pattern": "🐛",
      "on_property": "title",
      "target": "fix"
    },
    {
      "pattern": "🧪",
      "on_property": "title",
      "target": "test"
    },
    {
      "pattern": "(PI-[^ ]+).*",
      "on_property": "title",
      "target": "jira"
    },
    {
      "pattern": "PI-[^ ]+",
      "on_property": "title",
      "method": "match"
    }
  ]
}