{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature"]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": ["fix"]
    },
    {
      "title": "## 🧪 Tests",
      "labels": ["test"]
    }
  ],

  "template": "${{CHANGELOG}}\n\n<details>\n<summary>❓ Other changes</summary>\n\n${{UNCATEGORIZED}}\n</details>",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "- no changes",
  "label_extractor": [
    {
      "pattern": ":sparkles:",
      "on_property": "title",
      "target": "feature"
    },
    {
      "pattern": ":bug:",
      "on_property": "title",
      "target": "fix"
    },
    {
      "pattern": ":test_tube:",
      "on_property": "title",
      "target": "test"
    }
  ]
}