{
  "description": "Split text into chunks and generate embeddings",
  "processors": [
    {
      "append": {
        "field": "text",
        "value": [
          "{{{date}}}",
          "{{{startTime}}}",
          "{{{typeDescription}}}",
          "{{{typeShortDescription}}}",
          "{{{outcomeDescription}}}",
          "{{{description}}}",
          "{{{notes}}}"
        ]
      }
    },
    {
      "join": {
        "field": "text",
        "separator": "\n"
      }
    },
    {
      "text_chunking": {
        "algorithm": {
          "fixed_token_length": {
            "token_limit": 64,
            "overlap_rate": 0.125,
            "tokenizer": "standard"
          }
        },
        "field_map": {
          "text": "textChunks"
        }
      }
    },
    {
      "text_embedding": {
        "model_id": "${model_id}",
        "field_map": {
          "textChunks": "textEmbedding"
        }
      }
    }
  ]
}