{
  "policy": {
    "description": "Delete semantic indexes after 30 days",
    "default_state": "active",
    "states": [
      {
        "name": "active",
        "transitions": [
          {
            "state_name": "deleted",
            "conditions": {
              "min_index_age": "30d"
            }
          }
        ]
      },
      {
        "name": "deleted",
        "actions": [
          {
            "delete": {}
          }
        ]
      }
    ],
    "ism_template": {
      "index_patterns": [
        "contact-semantic-search-*"
      ]
    }
  }
}